<!DOCTYPE html>
<html>
  <head>
    <title>Chitter</title>
  </head>
  <body>
    <br>
    <div class="container">
      <div class="row justify-content-center">
        <h1 class="text-center">Welcome to Chitter</h1>
      </div>
    </div>
    <br>
    <% if !@user %>
    <div class="container">
      <div class="row justify-content-center">
        <form class="text-center" action="/sign-up" method="get">
          <input class="btn btn-dark" type="submit" value="Sign up">
        </form>
      </div>
    </div>
    <br>
    <div class="container">
      <div class="row justify-content-center">
        <form class="text-center" action="/log-in" method="get">
          <input class="btn btn-dark" type="submit" value="Log in">
        </form>
      </div>
    </div>
    <% end %>
  </body>
</html>
