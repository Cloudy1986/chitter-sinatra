<!DOCTYPE html>
<html>
  <head>
    <title>Chitter</title>
  </head>
  <body>
    <br>
    <div class="container-fluid">
      <div class="row justify-content-center">
        <h1 class="text-center">Peep</h1>
      </div>
    </div>
    <br>
    <div class="container-fluid">
      <div class="row justify-content-center">
          <div class="card" style="width: 40rem;">
            <div class="card-body text-center">
              <br>
              <h5 class="card-title"><%= @peep.message %></h5>
              <br>
              <h6 class="card-subtitle mb-2 text-muted">Created by <%= @peep.owner.username %> at <%= Time.parse("#{@peep.created_at}").strftime("%H:%M %d/%m/%Y") %></h6>
              <br>
              <% if @user%>
              <form action="/peeps/<%= @peep.id %>/comments/new" method="get">
                <input class="btn btn-dark" type="submit" value="Add comment">
              </form>
              <br>
              <% end %>
            </div>
          </div>
      </div>
    </div>
    <br>
    <br>
    <div class="container-fluid">
      <div class="row justify-content-center">
        <h1 class="text-center">Comments</h1>
      </div>
    </div>
    <br>
    <div class="container-fluid">
      <div class="row justify-content-center">
        <% @comments.each do |comment| %>
          <div class="card" style="width: 40rem;">
            <div class="card-body text-center">
              <br>
              <h5 class="card-title"><%= comment.text %></h5>
              <br>
              <h6 class="card-subtitle mb-2 text-muted">Created by ???? at <%= Time.parse("#{comment.created_at}").strftime("%H:%M %d/%m/%Y") %></h6>
              <br>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <br>
  </body>
</html>
