<!DOCTYPE html>
<html>
  <head>
    <title>Chitter</title>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row justify-content-center">
        <div class="card" style="width: 40rem;">
          <div class="card-body text-center">
            <br>
            <h5 class="card-title"><%= @peep.message %></h5>
            <br>
            <h6 class="card-subtitle mb-2 text-muted">Created by <%= @peep.owner.username %> at <%= Time.parse("#{@peep.created_at}").strftime("%H:%M %d/%m/%Y") %></h6>
            <br>
          </div>
        </div>
      </div>
    </div>
    <br>
    <div class="container-fluid">
      <div class="row justify-content-center">
        <h1 class="text-center">Add a comment</h1>
      </div>
    </div>
    <br>
    <div class="container-fluid">
      <div class="row justify-content-center">
        <form class="text-center" action="/peeps/<%= @peep.id %>/comments/new" method="post">
          <input class="form-control" type="text" name="comment_text">
          <br>
          <input class="btn btn-dark" type="submit" value="Add comment">
        </form>
      </div>
    </div>
  </body>
</html>


